FROM ubuntu
RUN apt-get update && apt-get install -y apt-utils vim curl apache2 apache2-utils python3 libapache2-mod-wsgi-py3 mysql-client libmysqlclient-dev python3-dev
RUN ln /usr/bin/python3 /usr/bin/python
RUN apt-get -y install python3-pip
RUN ln /usr/bin/pip3 /usr/bin/pip
RUN pip install --upgrade pip
COPY . /var/www/html
WORKDIR /var/www/html
ADD ./djangosite.conf /etc/apache2/sites-available/000-default.conf
RUN pip install -r requirements.txt
EXPOSE 80 3500
CMD ["sh","//var/www/html/apacheRun.sh"]